<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:baselineAligned="false">
    
    <fragment
        android:id="@+id/frag_meal"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.example.droidapp4.FragMeal" />
    <fragment
        android:id="@+id/frag_workout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
                android:layout_weight="1"
        class="com.example.droidapp4.FragWorkout" />
    <fragment
        android:id="@+id/frag_progress"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.example.droidapp4.FragProgress" />
    <fragment
        android:id="@+id/frag_settings"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.example.droidapp4.FragSettings" />

    
</LinearLayout>
